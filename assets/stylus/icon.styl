.icon
  display inline-block
  width 100%
  height 100%
  background-repeat no-repeat !important

  &--burger
    background url("/images/icon-burger.png")
    width 61px
    height 65px
  &--pizza
    background url("/images/icon-pizza.png")
    width 61px
    height 64px
  &--coffe
    background url("/images/icon-coffe.png")
    width 68px
    height 64px
  &--icecream
    background url("/images/icon-icecream.png")
    width 40px
    height 65px
  &--cart
    background url("/images/icon-cart.png")
    width 45px
    height 23px
  &--arrow
    background url("/images/icon-arrow.png")
    width 45px
    height 23px
    position relative
    top 5px
  &--clock
    background url("/images/icon-clock.png")
    width 14px
    height 14px
  &--mail
    background url("/images/icon-mail.png")
    width 17px
    height 12px
  &--phone
    background url("/images/icon-phone.png")
    width 19px
    height 19px